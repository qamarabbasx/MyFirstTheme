{% for article in blog.articles limit: section.settings.blog-range %}
<div class="grid__item medium-up--one-third">
<a href="{{article.url}}">
{{article.title}} 
</a>
<br>
<a href="{{article.url}}">
<img src="{{article.image | img_url:'500x'}}">
</a>

</div>
{% endfor %}
    
{% endunless %}

{% schema %}
{
   "name": " New Blog Posts",
  "settings": [
      {
        "id":"blog-range",
        "type":"range",
        "label":"Range",
        "min":3,
        "max":15,
        "step":3,
        "default":3
      },
      {
          "id":"new-blog",
          "type":"blog",
          "label":"blog"
      }
  ],
  "presets":[
  {
     "name": " New Blog Posts",
     "category":"Posts"
  }]
}
{% endschema %}